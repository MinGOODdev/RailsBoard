<h1>Home#new</h1>
<form action="/home/create" method="post">
  <!-- CSRF 공격을 방지하는 토큰 -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  제목: <input type="text" name="post_title"><br><br>
  내용: <textarea name="post_content"></textarea><br>
  <input type="submit" value="제출">
</form>


<!--
  form helper: form_tag
  'post_title', 'post_content'는 name
  nil은 value
  순서가 바뀌면 안된다.
-->
<h1>form_tag</h1>
<%= form_tag(posts_path, method: 'post') do %>
  <%= label_tag 'post_title', '제목' %>
  <%= text_field_tag 'post_title', nil, placeholder: "제목을 입력하세요." %><br><br>
  <%= label_tag 'post_content', '내용' %>
  <%= text_area_tag 'post_content', nil, placeholder: "내용을 입력하세요." %><br>
  <%= submit_tag '제출' %>
<% end %>